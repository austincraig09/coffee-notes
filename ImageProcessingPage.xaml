<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="CoffeeNotesApp2.ImageProcessingPage">
    <VerticalStackLayout Spacing="15" Padding="20">
        <Image x:Name="ImportedImage" HeightRequest="300" />
        <Entry x:Name="BrandEntry" Placeholder="Coffee Brand" />
        <Entry x:Name="RoastEntry" Placeholder="Roast Type" />
        <Button Text="Save Coffee Note" 
                Clicked="OnSaveCoffeeNoteClicked" 
                HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>